@model GainTracker.Models.ViewModels.StatisticListViewModel

@{
    ViewBag.Title = "ViewStatistics";
}

<h2>Site statistics</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Rows.First().Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rows.First().Visitors)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rows.First().UniqueVisitors)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rows.First().RegisteredUsers)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rows.First().AddedData)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rows.First().RegPerVisit)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Rows)
    {
        <tr>
            <td>
                @item.Date.ToString("yyyy-MM-dd")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Visitors)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UniqueVisitors)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegisteredUsers)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddedData)
            </td>
            <td>
                @item.RegPerVisit
            </td>
            <td>
                <button class="btn btn-info" data-toggle="collapse" data-target=".@item.Date.ToString("dd-MM-yyyy")">Show stuff</button>
            </td>
        </tr>

        foreach (var user in item.Items)
        {
            <tr id="@item.Date.ToString("dd-MM-yyyy")" class="collapse @item.Date.ToString("dd-MM-yyyy")">
                <td>
                    @Html.DisplayFor(userItem => user.UserName)
                </td>
                <td>
                    @Html.DisplayFor(userItem => user.Email)
                </td>
                <td>
                    @Html.DisplayFor(userItem => user.IPAddress)
                </td>
            </tr>
        }
    }

</table>
